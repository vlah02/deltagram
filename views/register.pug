extends layout

block content
  .auth-container.w-80.mx-auto.my-20.p-8.bg-container-bg.dark:bg-gray-800.border.border-input-border.rounded-lg.shadow-lg.text-center
    h2.text-accent.dark:text-white.text-2xl.font-semibold.mb-6 Register
    form(method='POST', action='/auth/register')
      input(type='text', name='username', placeholder='Username', required class='w-full p-3 mb-4 border border-input-border rounded-md bg-input-bg text-text dark:bg-gray-700 dark:text-white')
      input(type='password', name='password', placeholder='Password', required class='w-full p-3 mb-4 border border-input-border rounded-md bg-input-bg text-text dark:bg-gray-700 dark:text-white')
      button(type='submit' class='w-full p-3 bg-accent2 text-white font-medium rounded-md cursor-pointer mb-4 transition-colors hover:bg-accent2-hover') Register
    p.text-sm
      | Already have an account?
      a(href='/auth/login' class='text-accent2 hover:text-accent') Log in